    <script>
    (function () {
        // HTML escape helper
        function escapeHtml(str) {
            if (str == null) return '';
            return String(str)
                .replace(/&/g, '&amp;')
                .replace(/</g, '&lt;')
                .replace(/>/g, '&gt;')
                .replace(/"/g, '&quot;')
                .replace(/'/g, '&#39;');
        }
        window.escapeHtml = escapeHtml;

        // Preload CompTIA bundles (async, non-blocking)
        async function preloadCompTIABundles() {
            try {
                const resp = await fetch('../assets/data/comptia-bundles.json', { cache: 'no-store' });
                if (resp && resp.ok) window._comptiaBundles = await resp.json();
                else window._comptiaBundles = window._comptiaBundles || [];
            } catch (e) {
                window._comptiaBundles = window._comptiaBundles || [];
                console.debug('CompTIA bundles preload failed (non-fatal):', e);
            }
        }

        // Safe history update
        function replaceUrlFromSearchParams(params) {
            const query = params.toString();
            const newUrl = query ? `${location.pathname}?${query}` : location.pathname;
            try { history.replaceState(null, '', newUrl); } catch (e) { /* ignore */ }
        }
        window.replaceUrlFromSearchParams = replaceUrlFromSearchParams;

        // Safe clipboard write with fallback
        async function safeCopyToClipboard(text) {
            try {
                if (navigator.clipboard && navigator.clipboard.writeText) {
                    await navigator.clipboard.writeText(text);
                    return true;
                }
                const ta = document.createElement('textarea');
                ta.value = text;
                ta.style.position = 'fixed';
                ta.style.left = '-9999px';
                document.body.appendChild(ta);
                ta.select();
                const ok = document.execCommand && document.execCommand('copy');
                document.body.removeChild(ta);
                return !!ok;
            } catch (e) {
                return false;
            }
        }
        window.safeCopyToClipboard = safeCopyToClipboard;

        // Create filter chip
        function createFilterChip(label, value, onRemove) {
            const chip = document.createElement('div');
            chip.className = 'filter-chip';
            const text = document.createElement('span');
            text.textContent = `${label}: ${value}`;
            text.style.fontWeight = '700';
            chip.appendChild(text);
            const rem = document.createElement('span');
            rem.className = 'remove-filter';
            rem.style.marginLeft = '0.6rem';
            rem.style.cursor = 'pointer';
            rem.setAttribute('role', 'button');
            rem.setAttribute('aria-label', `Remove ${label} filter`);
            rem.textContent = '✕';
            rem.addEventListener('click', onRemove);
            chip.appendChild(rem);
            return chip;
        }

        // Reset filters
        function resetFilters() {
            const sectorSel = document.getElementById('sector-filter');
            const levelSel = document.getElementById('level-filter');
            if (sectorSel) sectorSel.value = '';
            if (levelSel) levelSel.value = '';
            replaceUrlFromSearchParams(new URLSearchParams());
            document.querySelectorAll('.certification-card').forEach(c => c.style.display = '');
            const appliedEl = document.getElementById('applied-filters');
            if (appliedEl) { appliedEl.innerHTML = ''; appliedEl.style.display = 'none'; }
            const nodata = document.getElementById('no-results-msg'); if (nodata) nodata.remove();
        }

        // Modal open/close
        function openCertificationModal(card) {
            const modal = document.getElementById('certification-modal');
            if (!modal) return;
            const header = modal.querySelector('.modal-header');
            if (!header) return;
            let titleEl = header.querySelector('.modal-title');
            if (!titleEl) {
                titleEl = document.createElement('div');
                titleEl.className = 'modal-title';
                header.insertBefore(titleEl, header.firstChild);
            }

            const titleText = (card.querySelector('.card-title')?.textContent || '').trim();
            const descText = (card.querySelector('.card-description')?.textContent || '').trim();
            const vendor = card.dataset.vendor || (card.querySelectorAll('.meta-value')[0]?.textContent || '').trim();
            const duration = (Array.from(card.querySelectorAll('.meta-item')).find(mi => (mi.querySelector('.meta-label')?.textContent || '').trim().toLowerCase() === 'duration:')?.querySelector('.meta-value')?.textContent || '').trim();
            const level = card.dataset.level || (card.querySelector('.card-level')?.textContent || '').trim();

            titleEl.textContent = titleText;

            let meta = header.querySelector('.modal-meta');
            if (!meta) {
                meta = document.createElement('div');
                meta.className = 'modal-meta';
                header.appendChild(meta);
            }
            meta.innerHTML = '';
            const createChip = (label, value) => {
                const chip = document.createElement('div');
                chip.className = 'modal-chip';
                const icon = document.createElement('span');
                icon.style.opacity = '0.9';
                icon.style.marginRight = '0.4rem';
                icon.textContent = label === 'Vendor' ? '🏷️' : label === 'Duration' ? '⏱️' : '🔰';
                chip.appendChild(icon);
                const txt = document.createElement('span');
                txt.textContent = `${value}`;
                chip.appendChild(txt);
                return chip;
            };
            if (vendor) meta.appendChild(createChip('Vendor', vendor));
            if (duration) meta.appendChild(createChip('Duration', duration));
            if (level) meta.appendChild(createChip('Level', level));

            const overview = modal.querySelector('.modal-section.-focus');
            if (overview) {
                const p = overview.querySelector('p');
                if (p) p.textContent = descText || p.textContent;
            }

            modal.classList.add('active');
            const closeBtn = modal.querySelector('.modal-close');
            if (closeBtn) closeBtn.focus();
        }

        function closeCertificationModal() {
            const modal = document.getElementById('certification-modal');
            if (!modal) return;
            modal.classList.remove('active');
        }

        // Core: applyFilters - exact matching via data attributes
        async function applyFilters() {
            const sectorSel = document.getElementById('sector-filter');
            const levelSel = document.getElementById('level-filter');
            const appliedEl = document.getElementById('applied-filters');
            if (!sectorSel || !levelSel) return;

            const sector = sectorSel.value.trim();
            const level = levelSel.value.trim();

            // Update URL params
            const params = new URLSearchParams();
            if (sector) params.set('sector', sector);
            if (level) params.set('level', level);
            replaceUrlFromSearchParams(params);

            const cards = Array.from(document.querySelectorAll('.certification-card'));
            let anyVisible = false;

            cards.forEach(card => {
                const cardSector = (card.dataset.sector || '').trim();
                const cardVendor = (card.dataset.vendor || '').trim();
                const cardLevel = (card.dataset.level || '').trim();

                let visible = true;
                if (sector) {
                    if (!cardSector || cardSector.toLowerCase() !== sector.toLowerCase()) visible = false;
                }
                if (level) {
                    if (!cardLevel || cardLevel.toLowerCase() !== level.toLowerCase()) visible = false;
                }
                card.style.display = visible ? '' : 'none';
                if (visible) anyVisible = true;
            });

            // Update applied filters UI
            appliedEl.innerHTML = '';
            if (!sector && !level) {
                appliedEl.style.display = 'none';
            } else {
                appliedEl.style.display = 'flex';
                if (sector) {
                    const chip = createFilterChip('Sector', sector, () => {
                        sectorSel.value = '';
                        applyFilters();
                    });
                    appliedEl.appendChild(chip);
                }
                if (level) {
                    const chip = createFilterChip('Level', level, () => {
                        levelSel.value = '';
                        applyFilters();
                    });
                    appliedEl.appendChild(chip);
                }
            }

            let nodata = document.getElementById('no-results-msg');
            if (!anyVisible) {
                if (!nodata) {
                    nodata = document.createElement('div');
                    nodata.id = 'no-results-msg';
                    nodata.style.textAlign = 'center';
                    nodata.style.padding = '2rem';
                    nodata.textContent = 'No certifications match your filters. Try clearing filters.';
                    document.getElementById('certification-cards').insertAdjacentElement('afterend', nodata);
                }
            } else {
                if (nodata) nodata.remove();
            }

            return { success: true };
        }
        window.applyFilters = applyFilters;

        // Init wiring
        document.addEventListener('DOMContentLoaded', async function init() {
            await preloadCompTIABundles();

            const applyBtn = document.getElementById('apply-filters');
            const resetBtn = document.getElementById('reset-filters');
            if (applyBtn) applyBtn.addEventListener('click', (e) => { e.preventDefault(); applyFilters(); });
            if (resetBtn) resetBtn.addEventListener('click', (e) => { e.preventDefault(); resetFilters(); });

            const cardsContainer = document.getElementById('certification-cards');
            if (cardsContainer) {
                cardsContainer.addEventListener('click', function (e) {
                    const card = e.target.closest('.certification-card');
                    if (!card) return;
                    const targetLink = e.target.closest('a.card-button, a[href]');
                    if (targetLink && targetLink.classList.contains('card-button')) {
                        e.preventDefault();
                        openCertificationModal(card);
                        return;
                    }
                    openCertificationModal(card);
                });
            }

            const modal = document.getElementById('certification-modal');
            if (modal) {
                modal.addEventListener('click', function (e) {
                    if (e.target === modal) closeCertificationModal();
                });
                const closeBtn = modal.querySelector('.modal-close');
                if (closeBtn) closeBtn.addEventListener('click', closeCertificationModal);
                document.addEventListener('keydown', function (e) {
                    if (e.key === 'Escape') closeCertificationModal();
                });
            }

            if (typeof wireDynamicVendorBadges === 'function') {
                try { wireDynamicVendorBadges(); } catch (err) { console.debug('wireDynamicVendorBadges failed', err); }
            }
            if (typeof wireDynamicFocusAreaTags === 'function') {
                try { wireDynamicFocusAreaTags(); } catch (err) { console.debug('wireDynamicFocusAreaTags failed', err); }
            }

            // Restore params from URL
            try {
                const params = new URLSearchParams(window.location.search);
                const s = params.get('sector');
                const l = params.get('level');
                const sectorSel = document.getElementById('sector-filter');
                const levelSel = document.getElementById('level-filter');
                if (s && sectorSel) sectorSel.value = s;
                if (l && levelSel) levelSel.value = l;
                if ((s && s.length) || (l && l.length)) await applyFilters();
            } catch (e) { /* ignore malformed URL */ }
        });
    })();
    </script>

